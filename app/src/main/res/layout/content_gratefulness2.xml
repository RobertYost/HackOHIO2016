<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_gratefulness2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.robertyost.hackohio2016.Gratefulness2"
    tools:showIn="@layout/activity_gratefulness2"
    android:background="@color/colorPrimary">

    <TextView
        android:text="3 Things from today that I am grateful for are..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Finish the statement"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/editText3"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Finish the statement"
        android:ems="10"
        android:id="@+id/editText4"
        android:textColor="@android:color/white"
        android:fontFamily="serif"
        android:textSize="30sp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Finish the statement"
        android:ems="10"
        android:id="@+id/editText5"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="Finish the activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/button6"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />
</RelativeLayout>
