<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_positive_thinking2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.robertyost.hackohio2016.PositiveThinking2"
    tools:showIn="@layout/activity_positive_thinking2"
    android:background="@color/colorPrimary">

    <TextView
        android:text="I like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp"
        android:fontFamily="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="fill in the statement"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/editText"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorHintInverse"
        android:textSize="30sp"
        android:fontFamily="serif"
        android:textColorHighlight="?attr/colorControlHighlight" />

    <TextView
        android:text="about myself."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView6"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp" />

    <TextView
        android:text="I could improve on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="30dp"
        android:id="@+id/textView7"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="fill in the statement."
        android:ems="10"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/editText2"
        android:fontFamily="serif"
        android:textColor="?android:attr/searchWidgetCorpusItemBackground"
        android:textSize="30sp" />

    <Button
        android:text="Finish activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/button2"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:onClick="onClick" />

</RelativeLayout>
