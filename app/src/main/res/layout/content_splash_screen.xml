<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1976D2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.robertyost.hackohio2016.CreateAccountActivity"
    tools:showIn="@layout/activity_splash_screen">

    <Button
        android:text="Login"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtn"
        android:layout_marginEnd="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:elevation="15dp"
        android:background="#00695c"
        android:textColor="#eeeeee"
        tools:targetApi="m"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="124dp"
        android:onClick="onLoginBtnClick"/>

    <Button
        android:text="Sign up"
        android:layout_height="wrap_content"
        android:id="@+id/signUpBtn"
        android:layout_marginEnd="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        android:layout_width="0dp"
        android:elevation="5dp"
        android:background="#00695c"
        android:textColor="#eeeeee"
        tools:targetApi="m"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:onClick="onSignUpBtnClick"/>

    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/medkit"
        android:id="@+id/imageView"
        android:layout_height="200dp"
        android:layout_width="200dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/loginBtn"
        android:layout_marginTop="94dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="93dp"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
